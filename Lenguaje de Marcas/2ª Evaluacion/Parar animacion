<script type="text/javascript" src="jquery-1.11.2.min.js"></script>
<script language="JavaScript">
$(document).ready(function(){
	$("#flip").click(function(){
		$("#llega").slideDown(5000);
	});
	$("#parar").click(function(){
		$("#panel").stop();
	});
});

</script>
